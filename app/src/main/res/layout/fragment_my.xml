<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="#f7f7f8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <RelativeLayout
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/holo_large"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:background="@drawable/fragment_my_card_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/iv_head"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="38dp"
                        android:layout_width="76dp"
                        android:layout_height="76dp">

                        <ImageView
                            android:scaleType="fitCenter"
                            android:src="@drawable/holo_large"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_marginStart="16dp"
                        android:id="@+id/tv_username"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/iv_head"
                        android:text="1654646"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/layout_change_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:layout_margin="24dp"
                            android:text="@string/change_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_type"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/iv_change_type_right"
                            android:textColor="@color/black"
                            android:text="1800"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_margin="16dp"
                            android:id="@+id/iv_change_type_right"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_baseline_chevron_right_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <View
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:background="#cccccc"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <RelativeLayout
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/layout_report"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:layout_margin="24dp"
                            android:text="@string/operation_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <ImageView
                            android:layout_margin="16dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_baseline_chevron_right_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <View
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:background="#cccccc"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <RelativeLayout
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/layout_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:layout_margin="24dp"
                            android:text="@string/language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_language"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/iv_language_right"
                            android:textColor="@color/black"
                            android:text="简体中文"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_margin="16dp"
                            android:id="@+id/iv_language_right"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_baseline_chevron_right_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <View
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:background="#cccccc"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <RelativeLayout
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/layout_clear_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:layout_margin="24dp"
                            android:text="@string/clear_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_num_note"
                            android:textSize="15sp"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/iv_cl_right"
                            android:textColor="@color/black"
                            android:text="@string/load_num_of_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:visibility="invisible"
                            android:layout_margin="16dp"
                            android:id="@+id/iv_cl_right"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_baseline_chevron_right_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/layout_factory_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:layout_margin="24dp"
                            android:text="@string/factory_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <ImageView
                            android:layout_margin="16dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_baseline_chevron_right_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                    <View
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:background="#cccccc"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:background="?android:attr/selectableItemBackground"
                        android:id="@+id/layout_reboot_system"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:layout_margin="24dp"
                            android:text="@string/reboot_system"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <ImageView
                            android:layout_margin="16dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_baseline_chevron_right_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/bt_logout"
                android:textSize="15sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="64dp"
                android:textColor="#e6212b"
                android:text="@string/logout"
                android:background="@drawable/bt_logout_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</layout>