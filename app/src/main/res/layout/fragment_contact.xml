<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="msg"
            type="com.heyanle.holo.entity.MsgInfo" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:background="#f7f7f8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@string/manufacturer"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@{msg.intro}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@string/address"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@{msg.adress}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@string/phone"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:textColor="#2184e6"
                        android:textSize="15sp"
                        android:text="@{msg.tel}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@string/fax"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:textColor="#2184e6"
                        android:textSize="15sp"
                        android:text="@{msg.phone}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@string/website"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:textColor="#2184e6"
                        android:textSize="15sp"
                        android:text="@{msg.web1}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@string/website"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:textColor="#2184e6"
                        android:textSize="15sp"
                        android:text="@{msg.web2}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@string/facebook"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@{msg.facebook}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@string/whats_app"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@{msg.weatsapp}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@string/youtube"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@{msg.youtube}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <View
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:text="@string/aftermarket_we_chat"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/we"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:textColor="#666666"
                        android:textSize="15sp"
                        android:src="@drawable/holo_large"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                </LinearLayout>


            </LinearLayout>





        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>
</layout>